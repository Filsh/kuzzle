{
  "name": "kuzzle",
  "author": "The Kuzzle Team <support@kuzzle.io>",
  "version": "1.0.0-RC3",
  "apiVersion": "1.0",
  "description": "Kuzzle is an open-source solution that handles all the data management through a secured API, with a large choice of protocols.",
  "main": "./lib/index.js",
  "bin": {
    "kuzzle": "./bin/kuzzle"
  },
  "scripts": {
    "test": "npm run --silent lint && npm run unit-testing && npm run functional-testing && npm run crawl-coverage",
    "unit-testing": "nyc --reporter=lcov npm run ava",
    "ava": "ava test -v",
    "functional-testing": "npm run cucumber",
    "cucumber": "cucumber.js --fail-fast",
    "crawl-coverage": "node coverage/scripts/feature-coverage-download.js",
    "codecov": "cat ./coverage/lcov.info | ./node_modules/.bin/codecov",
    "lint": "eslint --max-warnings=0 ./lib ./bin ./test ./features",
    "enable": "node bin/kuzzle enable",
    "disable": "node bin/kuzzle disable",
    "preversion": "git checkout master && git pull",
    "postversion": "git push && git push --tags"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "amqplib": "0.4.1",
    "async": "1.5.2",
    "big.js": "3.1.3",
    "body-parser": "1.15.0",
    "bufferutil": "^1.2.1",
    "bunyan": "^1.5.1",
    "cli-color": "^1.1.0",
    "commander": "2.9.0",
    "crypto-md5": "^1.0.0",
    "easy-circular-list": "^1.0.13",
    "elasticsearch": "11.0.1",
    "eventemitter2": "^1.0.0",
    "finalhandler": "0.4.1",
    "geolib": "j33f/Geolib",
    "ioredis": "^1.15.1",
    "json-stable-stringify": "1.0.1",
    "json2yaml": "^1.1.0",
    "jsonwebtoken": "^5.4.0",
    "kuzzle-common-objects": "^1.0.0",
    "lodash": "4.11.1",
    "ms": "^0.7.1",
    "ngeohash": "0.6.0",
    "node-units": "0.1.7",
    "node-uuid": "1.4.7",
    "passport": "0.3.2",
    "pm2": "1.1.2",
    "portfinder": "^1.0.3",
    "proper-lockfile": "^1.1.2",
    "q": "2.0.3",
    "rc": "1.1.6",
    "readline-sync": "^1.3.0",
    "request-promise": "^3.0.0",
    "rimraf": "^2.5.2",
    "router": "1.1.4",
    "utf-8-validate": "^1.2.1",
    "ws": "1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kuzzleio/kuzzle.git"
  },
  "devDependencies": {
    "ava": "0.15.2",
    "ava-spec": "1.0.1",
    "codecov.io": "^0.1.6",
    "cucumber": "0.10.2",
    "eslint": "2.8.0",
    "istanbul": "0.4.3",
    "istanbul-middleware": "0.2.2",
    "mock-require": "^1.3.0",
    "mqtt": "1.8.0",
    "nyc": "6.6.1",
    "parser-yaml": "^0.1.1",
    "rewire": "2.5.1",
    "should": "8.3.1",
    "should-sinon": "0.0.5",
    "sinon": "1.17.3",
    "sinon-as-promised": "^4.0.0",
    "socket.io-client": "1.4.5",
    "stomp-client": "0.8.1"
  },
  "engines": {
    "node": ">= 4.4.5",
    "npm": ">= 2.14.4"
  },
  "license": "Apache-2.0"
}
